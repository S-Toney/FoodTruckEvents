@model IEnumerable<FTE.DATA.EF.UserDetails>

@{
    ViewBag.Title = "User Details";
}

<section id="contact" class="section-bg">

    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>@ViewBag.Title</h2>
            <p>Schedule with Food Truck Events and let us bring the people to you!</p>
            <p class="mx-auto">
                <a href="@Url.Action("Create", "UserDetails")"><i class="fas fa-plus-square fa-2x pl-03"></i></a>
            </p>
        </div>

        <div class="row contact-info">

            <div class="col-md-4">

            </div>

            <div class="col-md-4">
                <table class="table">
                    <tr>
                        <th >
                            @Html.DisplayNameFor(modelItem => modelItem.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => modelItem.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => modelItem.UserID)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @*<a href="@Url.Action("Details", "UserDetails", new { id = item.UserID })">*@@Html.DisplayFor(modelItem => item.FirstName)@*</a>*@
                            </td>
                            <td>
                                @*<a href="@Url.Action("Details", "UserDetails", new { id = item.UserID })">*@@Html.DisplayFor(modelItem => item.LastName)@*</a>*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserID)
                                <a href="@Url.Action("Edit", "UserDetails", new { id = item.UserID })" class="mx-3"><i class="fas fa-pen-square fa-2x"></i></a>
                                <a href="@Url.Action("Delete", "UserDetails", new { id = item.UserID })" class="mx-3"><i class="fas fa-minus-square fa-2x"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>

            <div class="col-md-4">

            </div>

        </div>



    </div>
</section>
