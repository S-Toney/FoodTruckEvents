@model FTE.DATA.EF.OwnerAsset

@{
    ViewBag.Title = "Details";
}

<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>@ViewBag.Title</p>
            <h2>@Model.TruckName</h2>
            <p class="text-center">
                <a href="@Url.Action("Edit", "OwnerAssets", new { id = Model.OwnerAssetID })" class="mx-2"><i class="fas fa-pen-square fa-2x pl-03"></i></a>
                <a href="@Url.Action("Index", "OwnerAssets")" class="mx-2"><i class="fas fa-caret-square-left fa-2x"></i></a>
            </p>
        </div>
        <div class="row contact-info">

            <div class="col-md-4">
                <!-- Truck Image -->
                <div class="col-md-6 mb-4">
                    <img src="~/Content/images/@Model.TruckPhoto" alt="@Model.TruckName" title="@Model.TruckPhoto" class="img-fluid" />
                </div>
            </div>

            <div class="col-md-4 text-left">
                <p class="text-md my-2">
                    @Html.DisplayNameFor(model => model.TruckFoodType.Cuisine):
                    @Html.DisplayFor(model => model.TruckFoodType.Cuisine)
                </p>
                <p>
                    @Html.DisplayFor(model => model.IsActive)
                    @Html.DisplayNameFor(model => model.IsActive)
                </p>
                <p>
                    <strong>@Html.DisplayNameFor(model => model.OwnerID):</strong>
                    @Html.DisplayFor(model => model.UserDetail.FirstName) @Html.DisplayFor(model => model.UserDetail.LastName)
                </p>
                <p>
                    <strong>@Html.DisplayNameFor(model => model.DateAdded):</strong>
                    @Html.DisplayFor(model => model.DateAdded)
                </p>
            </div>

            <div class="col-md-4 text-left">
                <strong> @Html.DisplayNameFor(model => model.SpecialNotes)</strong> <br />
                @Html.DisplayFor(model => model.SpecialNotes)
            </div>

        </div>
    </div>
</section>

