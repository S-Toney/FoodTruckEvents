@model FTE.DATA.EF.Reservation

@{
    ViewBag.Title = "Make a Reservation";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section id="contact" class="section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <p></p>
                <h2>@ViewBag.Title</h2>
                <p class="text-center">
                    <a href="@Url.Action("Index", "Reservations")" class="mx-2"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
                </p>
            </div>
            <div class="row contact-info">
                <div class="col-md-4">

                </div>
                <div class="col-md-4 text-left">
                    <p class="delete-warning mb-1 p-1">@ViewBag.ErrorMessageDup</p>
                    <p class="delete-warning mb-1 p-1">@ViewBag.ErrorMessageLimit</p>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OwnerAssetID, "OwnerAssetID", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("OwnerAssetID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OwnerAssetID, "", new { @class = "text-danger" })
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EventID, "EventID", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("EventID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EventID, "", new { @class = "text-danger" })
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservationDate, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit Reservation" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                <div class="col-md-4 text-left">

                </div>
            </div>
        </div>
    </section>

