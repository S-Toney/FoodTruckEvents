@model FTE.DATA.EF.Reservation

@{
    ViewBag.Title = "Delete";
}

<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>@ViewBag.Title</p>
            <h2>Reservation</h2>

            <p class="delete-warning"><i class="fas fa-exclamation-triangle mx-2"></i>Are you sure you want to delete @Html.DisplayFor(model => model.Event.EventName) on @Html.DisplayFor(model => model.ReservationDate)?</p>
            <p class="mx-auto mt-3">
                <a href="@Url.Action("Index", "Reservations")"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
            </p>
        </div>
        <div class="row" @*contact-info*@>

            <div class="col-md-4">

            </div>

            <div class="col-md-4">
                <div class="pl-045">
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.ReservationDate):</strong>
                        @Html.DisplayFor(model => model.ReservationDate)
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.EventName):</strong>
                        @Html.DisplayFor(model => model.Event.EventName)

                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.OwnerAsset.TruckName):</strong>
                        @Html.DisplayFor(model => model.OwnerAsset.TruckName)
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-3 align-items-center">
                            <input type="submit" value="Delete" class="btn btn-default" />
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-4">

            </div>

        </div>
    </div>
</section>


