@model FTE.DATA.EF.TruckFoodType

@{
    ViewBag.Title = "Add a Cuisine Category";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section id="contact" class="section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>@ViewBag.Title</h2>
                <p class="mx-auto">
                    <a href="@Url.Action("Index", "TruckFoodTypes")"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
                </p>
            </div>
            <p class="mx-auto">
                @Html.ValidationSummary("", new { @class = "text-error text-center" })
            </p>
            <div class="row contact-info">

                <div class="col-md-4">
                </div>
                <div class="col-md-4 justify-content-center align-items-center">
                    <div class="align-items-center">
                        <div class="form-group">
                            @Html.EditorFor(model => model.Cuisine, new { htmlAttributes = new { @class = "form-control", placeholder = "Cuisine" } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Cuisine" class="btn btn-default" />
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </section>
}
