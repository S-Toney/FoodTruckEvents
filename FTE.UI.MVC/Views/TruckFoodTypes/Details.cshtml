@model FTE.DATA.EF.TruckFoodType

@{
    ViewBag.Title = "Details";
}

<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>@ViewBag.Title</p>
                <h2>@Model.Cuisine</h2>
            <p class="text-center">
                @if (Request.IsAuthenticated && User.IsInRole("SysAdmin"))
                {
                    <a href="@Url.Action("Edit", "TruckFoodTypes", new { id = Model.TruckFoodTypeID })" class="mx-2"><i class="fas fa-pen-square fa-2x pl-03"></i></a>
                }
                <a href="@Url.Action("Index", "TruckFoodTypes")" class="mx-2"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
            </p>
        </div>
        <div class="row contact-info">

            <div class="col-md-4">

            </div>

            <div class="col-md-4 text-md text-left">
               @Model.Description
            </div>

            <div class="col-md-4">

            </div>

        </div>
    </div>
</section>
