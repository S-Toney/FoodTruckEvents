@model FTE.DATA.EF.Events

@{
    ViewBag.Title = "Details";
}
<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>@ViewBag.Title</p>
            <h2>@Model.EventName</h2>

            <p class="text-center">
                @if (Request.IsAuthenticated && User.IsInRole("SysAdmin"))
                {
                    <a href="@Url.Action("Edit", "Events", new { id = Model.EventID })" class="mx-2"><i class="fas fa-pen-square fa-2x pl-03"></i></a>
                }
                <a href="@Url.Action("Index", "Events")" class="mx-2"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
            </p>
        </div>
        <div class="row" @*contact-info*@>

            <div class="col-md-4">

            </div>

            <div class="col-md-4">
                <div class="pl-045">
                    <div>
                        @Html.DisplayNameFor(model => model.EventDate):
                        @Html.DisplayFor(model => model.EventDate)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.IsCancelled)
                        @Html.DisplayNameFor(model => model.IsCancelled)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Location.LocationName):<br />
                        @Html.DisplayFor(model => model.Location.LocationName)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Notes):<br />
                        @Html.DisplayFor(model => model.Notes)
                    </div>
                </div>
            </div>

            <div class="col-md-4">

            </div>

        </div>
    </div>
</section>
