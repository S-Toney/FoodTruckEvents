                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Notes):<br />
                        @Html.DisplayFor(model => model.Notes)
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color mt-3 text-center">
                            <input type="submit" value="Delete" class="btn btn-default" />
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-4">

            </div>


            
