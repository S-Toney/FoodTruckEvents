        <div class="section-header">
            <p>@ViewBag.Title</p>
            <h2>@Model.EventName</h2>

            <p class="delete-warning"><i class="fas fa-exclamation-triangle mx-2"></i>Are you sure you want to delete @Model.EventName?</p>
            <p class="mx-auto mt-3">
                <a href="@Url.Action("Index", "Events")"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
