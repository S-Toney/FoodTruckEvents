@model FTE.DATA.EF.Location

@{
    ViewBag.Title = "Delete";
}

<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <p>@ViewBag.Title</p>
            <h2>@Model.LocationName</h2>
            <p class="delete-warning"><i class="fas fa-exclamation-triangle mx-2"></i>Are you sure you want to delete @Model.LocationName?<i class="fas fa-exclamation-triangle mx-2"></i></p>
            <p class="mx-auto mt-3">
                <a href="@Url.Action("Index", "Locations")"><i class="fas fa-caret-square-left fa-2x pl-03"></i></a>
            </p>
        </div>
        <div class="row contact-info">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 text-md">
                <strong>Address:</strong><br />
                @Html.DisplayFor(model => model.Address) <br />
                @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.ZipCode) <br /><br />
                <strong>Reservation Limit:</strong><br />
                @Html.DisplayFor(model => model.ReservationLimit)
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mt-3">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </div>
                }
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</section>
