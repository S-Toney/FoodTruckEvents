@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}


<section id="contact" class="section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>@ViewBag.Title</h2>
                <p class="mx-auto">
                    <a href="@Url.Action("Create", "RolesAdmin")"><i class="fas fa-plus-square fa-2x pl-03"></i></a>
                </p>
        </div>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="row mx-auto">
                    <table class="table">
                        <tr>
                            <th class="align-middle">
                                @Html.DisplayNameFor(modelItem => modelItem.Name)
                            </th>
                            <th>

                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "RolesAdmin", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "RolesAdmin", new { id = item.Id })" class="mx-3"><i class="fas fa-pen-square fa-2x"></i></a>
                                    @if (Request.IsAuthenticated && User.IsInRole("SysAdmin"))
                                    {<a href="@Url.Action("Delete", "RolesAdmin", new { id = item.Id })" class="mx-3"><i class="fas fa-minus-square fa-2x"></i></a>}
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</section>